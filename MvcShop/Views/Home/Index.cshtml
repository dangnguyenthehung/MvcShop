@model MvcShop.Models.HomePageModel
@{
    string status = "Còn hàng";
}
@{
    ViewBag.Title = "Home Page";
}
<script>
    var AppUrlSettings = {
        AddToCartUrl: '@Url.Action("AddToCart","Cart")',
        RemoveFromCartUrl: '@Url.Action("RemoveFromCart", "Cart")',
        UpdateCartQuantityUrl: '@Url.Action("UpdateCartQuantity", "Cart")'
    }
</script>
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Sản phẩm của chúng tôi</h2>
        @foreach (var item in Model.ListProduct)
        {
            string formattedPrice = item.formattedPrice();
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <div class="img-wrapper">
                                <img src="@Html.DisplayFor(i=>item.ProductImages)" alt="" />
                            </div>
                            
                            
                            <h2>@formattedPrice <sup class="currency">đ</sup></h2>
                            <p>
                                @Html.ActionLink(
                                item.ProductCode,
                                "Details", "Shop",
                                new { id = item.Id }, null)
                            </p>
                            <div class="btn btn-default add-to-cart" data-productID="@Html.DisplayFor(m => item.Id)"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</div>
                            @*<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>*@
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <p><span>Sản phẩm: </span>@Html.DisplayFor(m => item.ProductName)</p>
                                <p><span>Thương hiệu: </span>@Html.DisplayFor(m => item.BrandName)</p>

                                @if (item.ProductStatus == 1)
                                {
                                    status = "Còn hàng";
                                }
                                else
                                {
                                    status = "Tạm hết hàng!";
                                }
                                <p>
                                    <span>Trạng thái: @status</span>

                                </p>

                            </div>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            @*<li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>*@
                            <li><a href=""><i class="fa fa-plus-square"></i>Thêm vào so sánh</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    
    
    </div><!--features_items-->
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-4 col-md-2 pull-right moreFeatures">
