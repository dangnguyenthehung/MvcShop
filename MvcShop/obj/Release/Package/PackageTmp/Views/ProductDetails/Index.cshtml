@model MvcShop.Models.ProductDetailsModel
@{
    string status = "Còn hàng";
    string strPrice = "";
    string strOldPrice = "";
    

    if (Model.Details.ProductStatus == 1)
    {
        status = "Còn hàng";
    }
    else
    {
        status = "Tạm hết hàng!";
    }
    strPrice = String.Format("{0:n0}", Model.Details.NewPrice);
    strPrice = strPrice.Replace(",", ".");
    strOldPrice = String.Format("{0:n0}", Model.Details.OldPrice);
    strOldPrice = strOldPrice.Replace(",", ".");
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


