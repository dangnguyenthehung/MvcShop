@model Model.Framework.Brand

@{
    ViewBag.Title = "Sửa thông tin hãng";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h3>Sửa thông tin hãng</h3>
            <div class="panel panel-default">

                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
    
                        <div class="form-horizontal">
                            <h4>Hãng</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group col-xs-12 col-md-8">
                                @Html.Label("Tên hãng", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-xs-12 col-md-4">
                                <div class="col-md-6">
                                    <input type="submit" value="Lưu" class="col-xs-12 btn btn-info" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</div>

