@model IEnumerable<Model.Framework.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}


<div id="page-wrapper">
    <div class="col-xs-12">
        <h2 class="page-header text-center">Danh sách hãng</h2>
    </div>

    <div class="row">
        <div class="col-xs-12 col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table list-product-table text-center">
                        <tr>
                            <th>
                                ID Hãng
                            </th>
                            <th>
                                Tên Hãng
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BrandName)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>

                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

        <div class="col-xs-12 col-lg-4">
            <div class="col-xs-12">
                @using (Html.BeginForm("Create", "Brands", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-xs-12">
                        @Html.TextBox("BrandName", "", new { @placeholder = "Tên hãng", @class = "form-control" })
                    </div>
                    
                    <div class="col-xs-12 col-md-6 col-md-offset-3 submit-container">
                        <button type="submit" class="col-xs-12 btn btn-info">Thêm mới</button>
                    </div>
                }
            </div>
        </div>
        <!-- /.col-lg-8 -->
    </div>
    <!-- /.row -->

</div>


