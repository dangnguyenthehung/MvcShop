
@{
    ViewBag.Title = "Xác nhận mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12 col-xs-push-0 col-md-push-4 col-md-4 form-container confirm-password">
    <h2>Xác nhận mật khẩu</h2>
    <div class="text-danger">
        @TempData["message"]
    </div>

    @using (Html.BeginForm("ConfirmPassword", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-12">
                    @Html.Password("password", "", new { @class = "form-control", @placeholder = "Mật Khẩu" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12 col-md-12 signup-submit">
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-6">
                            <input type="submit" value="Xác nhận mật khẩu" class="btn btn-primary col-xs-12" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


