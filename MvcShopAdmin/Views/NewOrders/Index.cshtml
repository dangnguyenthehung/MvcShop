@model MvcShopAdmin.Models.OrdersModel
@{
    ViewBag.Title = "Đơn hàng mới";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h3>Đơn hàng đang chờ</h3>
            <div class="panel panel-default">

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table text-center">
                        <tr>
                            <th>
                                Mã ĐH
                            </th>
                            <th>
                                Tên KH
                            </th>
                            <th>
                                Đ/chỉ
                            </th>
                            <th>
                                Quận
                            </th>
                            <th>
                                Tỉnh/TP
                            </th>
                            <th>
                                Tổng tiền
                            </th>
                            <th>
                                Ngày đặt
                            </th>
                            <th>
                                Ghi chú
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.listOrder)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Delivery_Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.District_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalMoney)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Chỉnh sửa", "Edit", new { Order_Id = item.Order_Id }) |*@
                                    @Html.ActionLink("Chi tiết", "Details", new { Order_Id = item.Order_Id })
                                    <br />
                                    @*@Html.ActionLink("Hoàn tất", "Complete", new { Order_Id = item.Order_Id }) |
                                        @Html.ActionLink("Hủy", "Delete", new { Order_Id = item.Order_Id })*@
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>

