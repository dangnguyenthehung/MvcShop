@model MvcShopAdmin.Models.OrderDetailsModel
@{
    ViewBag.Title = "Xóa đơn hàng";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}


<div id="page-wrapper" class="OrderDetails">
    
    <div class="row">
        <h3 class="text-center">Xóa Đơn hàng</h3>
        <h4 class="text-center text-danger">Bạn có chắc muốn xóa?</h4>
        <div class="col-xs-12 checkout-info">
            <h3>Thông tin đặt hàng</h3>
            @using (Html.BeginForm("VerifyOrder", "OrderDetails"))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            @Html.HiddenFor(i => i.OrderInfo.Order_Id)
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.Customer_Name)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(i => i.OrderInfo.Customer_Name, new {@class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.Customer_Tel)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(i => i.OrderInfo.Customer_Tel, new {@class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.Delivery_Address)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(i => i.OrderInfo.Delivery_Address, new {@class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.District_Name)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(i => i.OrderInfo.District_Name, new {@class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.City_Name)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(i => i.OrderInfo.City_Name, new {@class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.OrderDate)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(i => i.OrderInfo.OrderDate, new {@class = "form-control", @disabled = "true"})
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">

                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.TotalMoney)
                            </div>
                            <div class="col-md-8 TotalMoney">
                                @Html.TextBoxFor(i => i.OrderInfo.TotalMoney, new {@class = "form-control", Value = Model.formatted_TotalMoney(), @disabled = "true" })
                                <span class="currency">(đồng)</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(i => i.OrderInfo.Notes)
                            </div>
                            <div class="col-md-8">
                                @Html.TextAreaFor(i => i.OrderInfo.Notes, new {@class = "form-control", @rows = 5, @disabled = "true" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-12">
            <h3>Chi tiết đơn hàng</h3>
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table text-center">
                        <tr>
                            <th>
                                Tên SP
                            </th>
                            <th>
                                Mã SP
                            </th>
                            <th>
                                Hãng
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Đơn giá
                            </th>
                            <th>
                                Thành tiền
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.listItem)
                        {
                            <tr class="cart-item">
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BrandName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Model.formatted_item_Price(item.Price) đ
                                </td>
                                <td>
                                    @Model.formatted_item_Price(item.TotalPrice) đ
                                </td>
                            </tr>
                        }

                    </table>
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Xóa" class="btn btn-danger"/>
                                        &nbsp;&nbsp;
                                        @Html.ActionLink("Quay lại", "Index")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
                
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>


